<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
</div>

<div class=main-wrapper>
    <div class="avatar text-center user">
      <div class="user">
        <div class="main-content">
          <div>
            <%= cl_image_tag @user.photo, class: "img-circle", :width=>75, :height=>75%>
          </div>
            <h2><%= @user.first_name %></h2>
            <p>Car Owner</p>
            <p><%=@user.description%></p>
          </div>
      </div>
    </div>

    <div class=grid-wrap>


      <div class="stat cars row">
        <% @user_cars.each do |car| %>
          <div class="col-lg-12 ">
            <div class="card" style="background-image: url('<%= cl_image_path car.photo %>')">
              <div class="card-description">
              <h2> <%= car.make %> </h2>
              <p> <%= car.price %> kr / day </p>
              </div>
              <%= link_to "", car_path(car), class: "card-link" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
