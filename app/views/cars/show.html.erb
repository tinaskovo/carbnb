<div class="car-banner" style="background-image: url('<%= cl_image_path @car.photo %>')">
  <h1><%=@car.make%></h1>
  <h2><%=@car.car_model%></h2>
</div>
<div class="container">
      <div class="profile text-center">
        <div class="main">
          <div class="main-content">
            <img src="images/seb.jpeg" alt="" width="150" class="img-circle">
            <h2>Car Owner</h2>
            <p><%=@car.user.first_name%></p>
            <a href="#" class="btn btn-primary btn-lg">Book</a>
            <%= link_to "Full Profile", "#", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
        <div class="stat">
          <div class="stat-content">
            <h3>SPECS</h3>
              <div class="spec-table">
              <div class="text-left">
                <p>Model: <%=@car.car_model%></p>
                <p>Engine Size: <%=@car.engine_size %>L</p>
                <p>Power: <%=@car.bhp%></p>
                <p>Doors: <%=@car.doors%></p>
              </div>
              <div class="text-left">
              <p>Seats: <%=@car.seats%></p>
              <p>Mileage: <%=@car.mileage%>Km</p>
              <p>Fuel Type: <%=@car.fuel_type%></p>
              <p>Transmission: <%=@car.transmission%></p>
            </div>
            </div>
          </div>
        </div>
        <div class="map">
          <div class="map-content">
            <h3>GOOGLE MAPS</h3>
            <p class="text-justify">
            </p>
          </div>
        </div>
      </div>
    </div>

<p id="notice"><%= notice %></p>
<%= link_to 'Back', cars_path, class: "btn btn-danger" %>






