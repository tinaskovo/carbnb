<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="container">
      <div class="row">
        <% @cars.each do |car| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: url('<%= cl_image_path car.photo %>')">
        </div>
        <div class="card-description">
          <%= link_to car.make, car_path(car) %>
        </div >
          <div class="card-link">
            <%= link_to car.make, car_path(car) %>
          </div>
        </div> <!-- col -->

      <% end %>
      </div> <!-- row -->
    </div> <!-- container -->
  </tbody>
</table>

